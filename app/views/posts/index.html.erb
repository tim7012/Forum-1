<h1>Forum</h1>

<%= link_to "New Post", new_post_path %>

<table>
  <% @posts.each do |post|%>
  <tr>
    <td><%= link_to post.title, post_path(post) %></td>
    <td><%= link_to "Edit", edit_post_path(post)%></td>
    <td><%= link_to "Delete", post_path(post), :method => :delete, :data => {:confirm => "Are you sure?"} %></td>
  </tr>
  <% end %>
</table>